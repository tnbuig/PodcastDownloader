<Window
    x:Class="OG.PD.Client.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:PD.OG.Client.Desktop.Views"
    xmlns:xwpf="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Podcast Downloader - Oran.G"
    Width="700"
    Height="440"
    MinWidth="450"
    MinHeight="300"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="Resources\Images\ApplicationIcon.ico"
    Loaded="Window_Loaded"
    MouseLeftButtonDown="MainWindow_MouseLeftButtonDown"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <views:HeaderView Grid.Column="0" Margin="1" />
        <views:StatusView Grid.Column="1" Margin="1" />
        <views:MenuView Grid.Column="2" Margin="1" />
    </Grid>
</Window>